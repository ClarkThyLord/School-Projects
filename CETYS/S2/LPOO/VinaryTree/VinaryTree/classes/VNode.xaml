<UserControl x:Class="VinaryTree.classes.VNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VinaryTree.classes"
             mc:Ignorable="d" 
             d:DesignHeight="50" MinWidth="50" d:DesignWidth="50" MinHeight="50">
    <Grid Loaded="Grid_Loaded">
        <Canvas x:Name="canvas"></Canvas>
        <Ellipse x:Name="ellipse" Fill="White" Stroke="Gray" StrokeThickness="3" Cursor="Hand" MouseEnter="ellipse_MouseEnter" MouseLeave="ellipse_MouseLeave"></Ellipse>
        <Label x:Name="value_txt" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="####" IsHitTestVisible="False"></Label>
    </Grid>
</UserControl>
