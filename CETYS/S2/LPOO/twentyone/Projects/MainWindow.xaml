<Window x:Class="Projects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projects"
        mc:Ignorable="d"
        Title="Twenty One" Height="600" Width="800" Icon="Imagenes/king_of_hearts.png" MinWidth="800" MinHeight="600">
    <Grid Loaded="Grid_Loaded" Margin="0,0,0,0">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF1EAA17" Offset="0"/>
                <GradientStop Color="#FF30662D" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="miCanvas" Background="#FF1EAA17" HorizontalAlignment="Stretch" Margin="0,0,0,169" MinHeight="400" SizeChanged="miCanvas_SizeChanged"/>

        <Label x:Name="lblPuntos" Content="" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" FontSize="36" Background="{x:Null}" Margin="10,275,10,175"/>

        <Button Content="Add" Click="Button_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,110" Height="39" Width="124"/>

    </Grid>
</Window>
